<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to '', user, method: :delete,
                                  data: { confirm: "You sure?" }, class: "btn btn-xs btn-danger btn-outline glyphicon glyphicon-trash" %>
  <% end %>
</li>
