<p id="notice"><%= notice %></p>
<% provide(:title, "Index") %>
<h1>Books</h1>

<% if logged_in? %>
  <%= link_to "", new_book_path, class: "btn btn-success btn-outline glyphicon glyphicon-plus" %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.author_id %></td>
        <td><%= link_to '', book, class: "btn btn-xs btn-info btn-outline glyphicon glyphicon-eye-open" %></td>
        <% if logged_in? %>
          <td><%= link_to '', edit_book_path(book), class: "btn btn-xs btn-primary btn-outline glyphicon glyphicon-pencil" %></td>
          <td><%= link_to '', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger btn-outline glyphicon glyphicon-trash" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>
